@model List<Pizza>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1>Pizza Styles</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Pizza" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> Add Another Pizza Style!
            </a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Pizza Styles</th>
            <th>Description</th>
            <th>Veggie</th>
            <th>Price</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td> @item.Name</td>
                <td> @item.Description</td>
                <td> @item.Veggie</td>
                <td> @item.Price</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Pizza" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            @* Must route item id in order to send to the right place. also ctrl+shift+/ for comments! *@
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Pizza" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

