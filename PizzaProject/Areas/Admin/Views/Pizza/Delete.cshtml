 @model Pizza

<h1>Delete Pizza?</h1>
<hr />
<div class="row">
    <form asp-action="Delete">
        <input asp-for="Id" hidden/>
        <div asp-validation-summary="All" class="text-danger"></div> @*Summary can be All, ModelOnly, or None*@
        <div class="form-group pb-2">
            <label asp-for="Name"  class="control-label"></label> @* tag helpers like asp-for tell EFcore what input is what what variable *@
            <input asp-for="Name" disabled class="form-control" />
          
        </div>

        <div class="form-group pb-3">
            <label asp-for="Description"  class="control-label"></label>
            <input type="text" asp-for="Description" disabled class="form-control" />
            @*   Added type=text to get rid of up/down arrows *@
           
        </div>

        <div class="form-group pb-3">
            <label asp-for="Price" class="control-label"></label>
            <input type="text" asp-for="Price" disabled class="form-control" />
            @*   Added type=text to get rid of up/down arrows *@
            
        </div>

        <div class="row">
            <div class="form-group pb-2 col-6">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
            <div class="col-6">
                <a asp-controller="Pizza" asp-action="Index" class="btn btn-primary form-control">Back to Pizza Style List</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @*Client side validation from jquery*@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}